<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0E68C" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1,2,3" >

        <TextView
            android:id="@+id/bajaOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp" />
        
        <Button
            android:id="@+id/btnUltimateBajaClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip"
            android:text="Clear order history"
            android:textColor="#000000" />

        <!-- Select Meals -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select meals (select one)"
            android:textColor="#000000" />

        <TableRow>

            <CheckBox
                android:id="@+id/checkNacho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nacho"
                android:checked="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceNacho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkTacos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taco"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceTacos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkQuesadilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quesadilla"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceQuesadilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkBurrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burrito"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceBurrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <!-- Select Protein -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select protein"
            android:textColor="#000000" />

        <TableRow>

            <CheckBox
                android:id="@+id/checkGroundBeef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ground beef"
                android:checked="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceGroundBeef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkSteak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steak"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceSteak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkChicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceChicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkPork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pork"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/pricePork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>
        <!-- Select Sides -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select sides"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkRice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rice"
            android:checked="true"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkBeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beans"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkLettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shredded Lettuce"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkTomatoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomatoes"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkRedOnion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Onion"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkCucumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cucumber"
            android:textColor="#000000" />

        <!-- Select Sauce -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select sauce"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkSalsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salsa"
            android:checked="true"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkPicoDeGallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pico de gallo"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkCreamCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cream cheese"
            android:textColor="#000000" />

        <!-- Continue Button -->

        <Button
            android:id="@+id/btnUltimateBajaProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="40dip"
            android:text="Click here to place an order..."
            android:textColor="#000000" />
    </TableLayout>

</ScrollView>